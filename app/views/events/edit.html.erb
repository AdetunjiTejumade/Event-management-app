<div class="single-event-main">

  <h1>edit event details</h1>
  <% if @event.errors.any? %>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  <% end %>
  <%= form_with local: true, class: 'form', model: @event do |form| %>


    <%= form.label :name %>
    <%= form.text_field :name %>
    <%= form.label :description %>
    <%= form.text_area :description, class: 'field' %>
    <%= form.label :location %>
    <%= form.text_field :location, class: 'field' %>
    <%= form.label :start_date %>
    <%= form.datetime_field :start_date, class: 'field' %>
    <%= form.label :end_date %>
    <%= form.datetime_field :end_date, class: 'field' %>
    <%= form.label :paid, "Paid" %>
    <%= form.check_box :paid %>
    <%= form.label :in_active %>
    <%= form.check_box :in_active %>

    <%= form.submit "save", class: 'submit-btn' %>

  <% end %>
</div>